import random
foundwords = []
wordsDict = {}

with open("text", "r") as file:
	words = file.read().replace('\n',' ').split(' ')

def findwords(word):
	for g in range(len(words) - 1):
		if words[g] == word:
			if not words[g + 1] == '':
				foundwords.append(words[g + 1].lower())
			elif words == ' ':
				foundwords.append(words[g + 2].lower())
	return foundwords

def nextword(word):
	poswords = findwords(word)
	wordsDict.setdefault(word, poswords)
	wordList = wordsDict[word]
	if not wordList:
		new = random.choice(words)
	else:
		new = random.choice(wordList)
	return new
    
def assemble():
	final = [random.choice(words).capitalize()]
	for i in range(5):
		final.append(nextword(final[-1]).lower())
	print(' '.join(final))

assemble()
